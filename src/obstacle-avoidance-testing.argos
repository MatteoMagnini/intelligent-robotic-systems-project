<?xml version="1.0" ?>
 
<argos-configuration>
 
  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="5000" ticks_per_second="10"/>
  </framework>
 
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
 
    <lua_controller id="lua">
      <actuators>
        <differential_steering implementation="default" noise_level="0.0"/>
      </actuators>
      <sensors>
        <differential_steering implementation="default" noise_level="0.0" />
        <footbot_proximity implementation="default" show_rays="true" noise_level="0.0" />
        <positioning implementation="default" noise_level="0.0" />
      </sensors>
      <params script="obstacle-avoidance-testing.lua" />
    </lua_controller>
 
  </controllers>
 

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="6, 6, 1" center="0,0,0.5" positional_grid_size="6,6,1">

    <box id="bn" size="0.1, 6, 0.2" movable="false">
      <body position="2.9, 0, 0"  orientation="0,0,0" />
    </box>
    <box id="bs" size="0.1, 6, 0.2" movable="false">
      <body position="-2.9,0,0" orientation="0,0,0" />
    </box>
    <box id="be" size="6, 0.1, 0.2" movable="false">
      <body position="0,-2.9,0" orientation="0,0,0" />
    </box>
    <box id="bw" size="6, 0.1, 0.2" movable="false">
      <body position="0,2.9,0" orientation="0,0,0" />
    </box>

    <foot-bot id="fb">
      <controller config="lua" />
      <body position="0.0,0.0,0" orientation="0,0,0" />
    </foot-bot>

    <!-- OBSTACLES -->
    <distribute>
      <position method="uniform" min="-2.5,-2.5,0" max="2.5,2.5,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="6" max_trials="100">
        <box id="o1" size="0.2, 0.6, 0.2" movable="false" />
      </entity>
    </distribute>
    
    <distribute>
      <position method="uniform" min="-2.5,-2.5,0" max="2.5,2.5,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="6" max_trials="100">
        <box id="o2" size="0.2, 1, 0.2" movable="false" />
      </entity>
    </distribute>
    
    <distribute>
      <position method="uniform" min="-2.5,-2.5,0" max="2.5,2.5,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="2" max_trials="100">
        <box id="o3" size="0.2, 2, 0.2" movable="false" />
      </entity>
    </distribute>    
  </arena>
 
  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>
 
  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <led id="leds" />
  </media>

	
  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl lua_editor="false">
      <camera>
		<placements>
			<placement index="0" position="0,-4.3,14" look_at="0,-0.15,0" lens_focal_length="65" />
		</placements>
      </camera>
    </qt-opengl>  

  </visualization>
 
</argos-configuration>

